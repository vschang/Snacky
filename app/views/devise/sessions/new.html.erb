<div class="login-container">Â 
  <div class="snacky-title">
    <h1 class="snacky">Snacky</h1>
  </div>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  label: "email",
                  input_html: { autocomplete: "email" },
                  label_html: { class: 'login-text' },
                  input_html: { class: 'login-input ' } %>
      <%= f.input :password,
                  required: false,
                  label: "password",
                  input_html: { autocomplete: "current-password" },
                  label_html: { class: 'login-text' },
                  input_html: { class: 'login-input' } %>

      <%# IDK how to style this %>
      <%# <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "log in", class:'post-btn' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
